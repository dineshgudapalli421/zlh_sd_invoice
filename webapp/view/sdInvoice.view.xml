<mvc:View controllerName="com.sap.lh.mr.zlhsdinvoice.controller.sdInvoice"
   xmlns:vh="sap.ui.mdc.filterbar.vh" xmlns:smartfield="sap.ui.comp.smartfield"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    xmlns:f="sap.f" 
    xmlns:mdc="sap.ui.mdc"
    xmlns:core="sap.ui.core" xmlns:fb="sap.ui.comp.filterbar">
    <f:DynamicPage id="dynamicPageId"
            stickySubheaderProvider="iconTabBar"
            class="sapUiNoContentPadding"
            headerExpanded="true"
            toggleHeaderOnTitleClick="{/titleClickable}">
            <f:header>
            <f:DynamicPageHeader
       
    >
        <f:content>
            <fb:FilterBar
                id="filterbar"
                persistencyKey="sdInvoicePersyKey"
                useToolbar="false"
                search=".onSearch"
                filterChange=".onFilterChange"
                filterContainerWidth="13rem"
                showClearOnFB="false"
                class="sapUiSmallMarginBottom"
            >
              <fb:filterGroupItems>                                            
                                
                                <fb:FilterGroupItem name="ContractAccount" 
                                label="Contract Account" 
                                groupName="Group1" 
                                visibleInFilterBar="true" mandatory="false">
                                    <fb:control>
                                        <Input
                                         id="idCA" 
                                         width="90%"  
                                         showValueHelp="false"
                                         value="{filters>/idCA}"
                                        >
                                        </Input>
                                    </fb:control>
                                </fb:FilterGroupItem> 
                                <fb:FilterGroupItem 
										name="periodFrom" 
										label="Billing Date From" 
										groupName="Group1" 
										visibleInFilterBar="true" mandatory="true">
											<fb:control>
                                             <DatePicker
                                                id="idDTP1" width="100%"
                                                placeholder="Enter Date"/>                                       
											</fb:control>
								</fb:FilterGroupItem>
										<fb:FilterGroupItem
											name="periodTo"
											label="Billing Date To"
											groupName="Group1"
											visibleInFilterBar="true" mandatory="true">
											<fb:control>
												<DatePicker
                                                id="idDTP2" width="100%"
                                                placeholder="Enter Date"/> 
											</fb:control>
										</fb:FilterGroupItem>                                                                                             
                            </fb:filterGroupItems>                        
            </fb:FilterBar>
        </f:content>        
    </f:DynamicPageHeader>
            </f:header>
            <f:content>
             <core:Fragment
                fragmentName="com.sap.lh.mr.zlhsdinvoice.fragment.items"  
                type="XML"
            />
     </f:content>
    </f:DynamicPage>
</mvc:View>